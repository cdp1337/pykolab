{
    "linters": {
        "merge-conflict": {
            "type": "merge-conflict"
        },
        "pep8": {
            "type": "pep8",
            "include": "(\\.py$)",
            "severity": {
                "E121": "disabled",
                "E126": "disabled"
            }
        },
        "spelling" : {
            "type": "spelling",
            "exclude": "(po\\/.*$)"
        }
    }
}
